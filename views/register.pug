html
    head
        title Register
    body
        h1#pageTitle Register a new account!
        form(action="/register", method="post")
            div.form-group
                label(for='name') Username:
                input#name.form-control(type='text', placeholder='Your username' name='name')
            div.form-group
                label(for='password') Password:
                input#password.form-control(type='password' name='password')